<odoo>
    <record id="res_partner_change_bill_date_form" model="ir.ui.view">
      <field name="name">res.partner.change.bill.date.form</field>
      <field name="model">res.partner.change.bill.date</field>
      <field name="arch" type="xml">
          <form>
              <div>
                  Change the Bill Date of this Partner
              </div>
              <group>
                  <field name="new_date"/>
              </group>
              <footer>
                  <button string="Confirm"
                          name="action_change_date"
                          type="object"
                          class="oe_highlight"/>
                  <button string="Cancel"
                          class="btn-default"
                          special="cancel"/>
              </footer>
          </form>
        </field>
    </record>
</odoo>
