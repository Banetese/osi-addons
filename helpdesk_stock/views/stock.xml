<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_type_kanban_helpdesk" model="ir.ui.view">
        <field name="name">stock.picking.type.kanban.helpdesk</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
        <field name="arch" type="xml">
            <field name='count_picking_backorders' position='after'>
                <field name='count_hdesk_requests'/>
            </field>
            <xpath expr="//div[hasclass('o_kanban_primary_right')]" position="inside">
                <div t-if="record.count_hdesk_requests.raw_value > 0" class="row">
                    <div class="col-9">
                        <a name="get_action_helpdesk_requests" type="object">
                            Helpdesk
                        </a>
                    </div>
                    <div class="col-3">
                        <field name="count_hdesk_requests"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Inventory / Operations / Helpdesk Tickets -->
    <record id="stock_helpdesk_ticket_form_request" model="ir.ui.view">
        <field name="name">stock.helpdesk.ticket.form.request</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket" create="false">
                <header>
                    <button name="action_confirm"
                        string="Confirm" type="object"
                        attrs="{'invisible': [('request_stage', 'not in', ['draft'])]}"/>
                    <button name="action_cancel"
                            attrs="{'invisible': [('request_stage', 'not in', ['draft','open'])]}"
                            type="object" string="Cancel"/>
                    <button name="action_draft" type="object"
                            attrs="{'invisible': [('request_stage', 'not in', ['cancel'])]}"
                            string="Set to Draft"/>
                    <button name="action_done"
                        string="Done" type="object"
                        attrs="{'invisible': [('request_stage', 'not in', ['open'])]}"/>
                    <field name='request_stage' widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="inventory_location_id"
                                   groups="stock.group_stock_multi_warehouses"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="warehouse_id"
                                   groups="stock.group_stock_multi_warehouses"/>
                        </group>
                    </group>
                    <field name="stock_request_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="name" readonly="1"/>
                            <field name="product_id"/>
                            <field name="product_uom_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   groups="uom.group_uom"/>
                            <field name="route_id"
                                   options="{'no_create': True}"
                                   groups="stock.group_stock_multi_locations"/>
                            <field name="route_ids" invisible="1"/>
                            <field name="product_uom_qty"/>
                            <field name="qty_in_progress"/>
                            <field name="qty_done"/>
                            <field name="expected_date" invisible="1"/>
                            <field name="picking_policy"
                                   invisible="1"/>
                            <field name="warehouse_id" invisible="1"/>
                            <field name="location_id" invisible="1"/>
                            <field name="procurement_group_id"
                                   invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stock_helpdesk_ticket_tree_request" model="ir.ui.view">
        <field name="name">stock.helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Tickets"
                  create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="request_stage"/>
            </tree>
        </field>
    </record>

    <record id="action_stock_helpdesk_ticket_request" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain" eval="[('request_stage', '=', 'draft'), ('stock_request_ids', '!=', False)]"/>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('helpdesk_stock.stock_helpdesk_ticket_tree_request')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('helpdesk_stock.stock_helpdesk_ticket_form_request')})]"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No Helpdesk Tickets to confirm.
            </p>
        </field>
    </record>

    <menuitem id="menu_stock_helpdesk_tickets"
              name="Helpdesk Tickets"
              action="action_stock_helpdesk_ticket_request"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="60"/>

</odoo>
